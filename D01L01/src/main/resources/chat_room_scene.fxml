<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="main_border_pane" minHeight="600.0" minWidth="400.0" prefHeight="600.0" prefWidth="487.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <BorderPane fx:id="top_border_pane" BorderPane.alignment="CENTER">
         <left>
            <ImageView fx:id="user_picture_imageView" fitHeight="150.0" fitWidth="171.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </left>
         <center>
            <Label fx:id="username_label" text="UserName" BorderPane.alignment="CENTER">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
   </top>
   <bottom>
      <TextField fx:id="typing_textField" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="15.0" left="10.0" right="15.0" />
         </BorderPane.margin>
      </TextField>
   </bottom>
   <center>
      <ScrollPane fx:id="messages_scroll_pane" style="-fx-background-color: blue;" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="messages_vbox" prefHeight="390.0" prefWidth="451.0" style="-fx-background-color: black;">
               <children>
                  <TextField fx:id="test_textField" />
               </children>
            </VBox>
         </content>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </ScrollPane>
   </center>
</BorderPane>
